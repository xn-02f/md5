# EditorConfig

# Top-most EditorConfig file
root = true

# General settings
[*]
charset = utf-8
indent_size = 4
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Matches the exact files either package.json or *.yml
[{*.yml, package.json}]
indent_size = 2
